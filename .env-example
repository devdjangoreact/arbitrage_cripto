# Exchange API Keys Configuration
# Copy this file to .env and fill in your actual API keys
# Never commit the .env file to version control!

# ===========================================
# BINANCE API KEYS
# ===========================================
BINANCE_API_KEY=your_binance_api_key_here
BINANCE_SECRET_KEY=your_binance_secret_key_here
BINANCE_SANDBOX=false
BINANCE_TESTNET=false

# ===========================================
# OKX API KEYS
# ===========================================
OKX_API_KEY=your_okx_api_key_here
OKX_SECRET_KEY=your_okx_secret_key_here
OKX_PASSPHRASE=your_okx_passphrase_here
OKX_SANDBOX=false

# ===========================================
# BYBIT API KEYS
# ===========================================
BYBIT_API_KEY=your_bybit_api_key_here
BYBIT_SECRET_KEY=your_bybit_secret_key_here
BYBIT_TESTNET=false

# ===========================================
# GATE.IO API KEYS
# ===========================================
GATE_API_KEY=your_gate_api_key_here
GATE_SECRET_KEY=your_gate_secret_key_here
GATE_SANDBOX=false

# ===========================================
# BITGET API KEYS
# ===========================================
BITGET_API_KEY=your_bitget_api_key_here
BITGET_SECRET_KEY=your_bitget_secret_key_here
BITGET_PASSPHRASE=your_bitget_passphrase_here
BITGET_SANDBOX=false

# ===========================================
# BINGX API KEYS
# ===========================================
BINGX_API_KEY=your_bingx_api_key_here
BINGX_SECRET_KEY=your_bingx_secret_key_here
BINGX_SANDBOX=false

# ===========================================
# MEXC API KEYS
# ===========================================
MEXC_API_KEY=your_mexc_api_key_here
MEXC_SECRET_KEY=your_mexc_secret_key_here
MEXC_SANDBOX=false

# ===========================================
# KRAKEN API KEYS
# ===========================================
KRAKEN_API_KEY=your_kraken_api_key_here
KRAKEN_SECRET_KEY=your_kraken_secret_key_here
KRAKEN_SANDBOX=false

# ===========================================
# COINBASE API KEYS
# ===========================================
COINBASE_API_KEY=your_coinbase_api_key_here
COINBASE_SECRET_KEY=your_coinbase_secret_key_here
COINBASE_PASSPHRASE=your_coinbase_passphrase_here
COINBASE_SANDBOX=false

# ===========================================
# GENERAL SETTINGS
# ===========================================
# Set to true to enable sandbox/testnet mode for all exchanges
GLOBAL_SANDBOX=false

# Rate limiting settings (requests per minute)
RATE_LIMIT_PER_MINUTE=60

# WebSocket connection settings
WS_RECONNECT_INTERVAL=5
WS_MAX_RECONNECT_ATTEMPTS=10

# ===========================================
# LOGGING SETTINGS
# ===========================================
LOG_LEVEL=INFO
LOG_FILE=logs/arbitrage.log

# ===========================================
# DATA STORAGE SETTINGS
# ===========================================
DATA_DIRECTORY=data
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24

# ===========================================
# NOTIFICATION SETTINGS (Optional)
# ===========================================
# Telegram Bot (for notifications)
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_CHAT_ID=your_telegram_chat_id_here

# Email notifications
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here
NOTIFICATION_EMAIL=your_notification_email@gmail.com

# ===========================================
# ARBITRAGE SETTINGS
# ===========================================
MIN_ARBITRAGE_PROFIT=0.001
MAX_ARBITRAGE_VOLUME=1000
ARBITRAGE_TIMEOUT_SECONDS=30

# ===========================================
# SECURITY SETTINGS
# ===========================================
# Enable API key encryption (recommended for production)
ENCRYPT_API_KEYS=false
ENCRYPTION_KEY=your_32_character_encryption_key_here

# IP whitelist (comma-separated IPs)
ALLOWED_IPS=127.0.0.1,192.168.1.0/24

# ===========================================
# DEVELOPMENT SETTINGS
# ===========================================
DEBUG_MODE=false
VERBOSE_LOGGING=false
MOCK_EXCHANGES=false
